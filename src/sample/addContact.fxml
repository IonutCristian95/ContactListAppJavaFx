<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.AddContactController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
        Here you can type in the details to create a new contact.
    </headerText>

    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="fNameAddContact" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="lNameAddContact" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Phone Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="phoneNumberAddContact" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Notes:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="notesAddContact" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
